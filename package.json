{
    "name": "@anglr/md-help",
    "version": "0.0.0-placeholder",
    "description": "Angular module containing basic implementation of markdown help interpreter",
    "main": "dist/index.js",
    "sideEffects": false,
    "scripts": {
        "build": "npm run build:node && npm run build:web",
        "build:node": "copyfiles -u 1 src/index.js dist",
        "build:web": "ngc -p web/tsconfig.es5.json && ngc -p web/tsconfig.es2015.json",
        "clean": "rimraf dist tests docs web/**/*.d.ts */*.d.ts */*.metadata.json ./*.metadata.json ./*.d.ts",
        "clean:deps": "rimraf package-lock.json node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "version:placeholder": "replace-in-file /\\\"version\\\":\\s\\\".*?\\\"/g \"\\\"version\\\": \\\"0.0.0-placeholder\\\"\" package.json --isRegex",
        "version:git": "ngv -e \"replace-in-file 0.0.0-placeholder $GIT_VERSION package.json\"",
        "prepublishOnly": "npm run bundle && npm run version:placeholder && npm run version:git",
        "postpublish": "npm run version:placeholder && npm run clean",
        "bundle": "npm run clean && npm run build",
        "deploy": "npm publish",
        "deploy:local": "npm publish --registry http://local:4873 && npm run docs",
        "deploy:next": "npm publish --tag next",
        "deploy:next:local": "npm publish --tag next --registry http://local:4873 && npm run docs",
        "docs": "compodoc src -d docs -n '@anglr/md-help' -p tsconfig.json --disablePrivate --disableInternal --disableLifeCycleHooks",
        "postdocs": "copyfiles -u 1 docs/**/*.* \\\\DOCS-SERVER\\docs\\ng-md-help && npm run clean",
        "pretest": "webpack",
        "test": "karma start karma.conf.js"
    },
    "keywords": [
        "angular",
        "ng",
        "markdown",
        "help"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "peerDependencies": {
        "@angular/core": ">=8.0.0",
        "@angular/common": ">=8.0.0",
        "@angular/router": ">=8.0.0",
        "rxjs": ">=6.5.0",
        "@anglr/notifications": ">=6.0.0",
        "marked": ">=0.3.19",
        "highlight.js": ">=9.12.0",
        "gulp": ">=3.9.1",
        "gulp-compile-handlebars": ">=0.6.1",
        "read-file": ">=0.2.0",
        "gulp-file": ">=0.4.0",
        "through2": ">=2.0.3"
    },
    "devDependencies": {
        "@angular/core": "^8.0.0",
        "@angular/common": "^8.0.0",
        "@angular/router": "^8.0.0",
        "@angular/forms": "^8.0.0",
        "@angular/animations": "^8.0.0",
        "rxjs": "^6.5.0",
        "zone.js": "^0.8.26",
        "@types/numeral": "~0.0.22",
        "@types/marked": "0.3.0",
        "@types/highlight.js": "9.12.2",
        "@anglr/notifications": "^6.0.0",
        "@anglr/animations": "^6.0.0",
        "numeral": "2.0.6",
        "@types/node": "~10.0.8",
        "@types/jasmine": "~2.8.7",
        "@angular/compiler-cli": "^8.0.0",
        "@angular/compiler": "^8.0.0",
        "@angular/language-service": "^8.0.0",
        "@angular/platform-browser-dynamic": "^8.0.0",
        "@angular/platform-browser": "^8.0.0",
        "tsickle": "0.35.0",
        "karma-cli": "1.0.1",
        "karma": "3.1.1",
        "karma-jasmine": "1.1.2",
        "karma-phantomjs-launcher": "1.0.4",
        "karma-chrome-launcher": "2.2.0",
        "karma-webpack": "3.0.5",
        "karma-jasmine-html-reporter": "1.4.0",
        "jasmine": "3.3.0",
        "awesome-typescript-loader": "5.2.1",
        "angular2-template-loader": "0.6.2",
        "raw-loader": "1.0.0",
        "sass-loader": "7.1.0",
        "css-loader": "1.0.1",
        "file-loader": "3.0.1",
        "style-loader": "0.23.1",
        "@compodoc/compodoc": "1.1.9",
        "rimraf": "2.6.3",
        "copyfiles": "2.1.0",
        "replace-in-file": "4.1.0",
        "typescript": "3.4.5",
        "webpack": "4.32.2",
        "npm-git-version": "1.1.0"
    }
}
